@model OWP.Models.Book
@{
    ViewBag.Title = "Delete";
}

<h2>
    Brisanje knjige
</h2>

<h4>Da li ste sigurni da zelite da obrisete ovu knjigu?</h4>

<dl class="dl-horizontal">
    <dt>Naziv</dt>
    <dd>@Model.Name</dd>

    <dt>Autor</dt>
    <dd>@Model.Author</dd>

    <dt>Datum izdavanja</dt>
    <dd>@Model.ReleaseDate</dd>

    <dt>Cena</dt>
    <dd>@Model.Price</dd>

    <dt>Dostupnost</dt>
    <dd>@Model.NumberInStock</dd>
</dl>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <button type="submit" class="btn btn-danger">Obriši</button>
    @Html.ActionLink("Odustani", "Index", null, new { @class = "btn btn-secondary" })
}

