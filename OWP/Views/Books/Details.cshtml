@model OWP.Models.Book
@{
    ViewBag.Title = "Details";
}

<h2>Detalji knjige</h2>
<hr />

<dl class="dl-horizontal">
    <dt>Naziv knjige</dt>
    <dd>@Model.Name</dd>

    <dt>Autor knjige</dt>
    <dd>@Model.Author</dd>

    <dt>Godina izdavanja</dt>
    <dd>@Model.ReleaseDate</dd>

    <dt>Cena</dt>
    <dd>@Model.Price</dd>

    <dt>Dostupnost</dt>
    <dd>@Model.NumberInStock</dd>
</dl>

<p>
    @Html.ActionLink("Izmeni", "Edit", new {id = Model.Id}) |
    @Html.ActionLink("Nazad", "Index")
</p>

