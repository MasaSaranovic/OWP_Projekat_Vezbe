@model IEnumerable<OWP.Models.Book>

<h2>Lista knjiga</h2>

<p>
    @Html.ActionLink("Dodajte novu knjigu", "Create")
</p>

<table class="table">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Autor</th>
            <th>Godina</th>
            <th>Cena</th>
            <th>Dostupno</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
            {
        <tr>
            <td>@item.Name</td>
            <td>@item.Author</td>
            <td>@item.ReleaseDate</td>
            <td>@item.Price</td>
            <td>@item.NumberInStock</td>
            <td>
                @Html.ActionLink("Detalji", "Details", new { id = item.Id }) |
                @Html.ActionLink("Izmeni", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Obrisi", "Delete", new { id = item.Id })
            </td>
        </tr>
            }
    </tbody>
</table>

