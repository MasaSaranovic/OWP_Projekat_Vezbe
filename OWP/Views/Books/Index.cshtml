@using PagedList.Mvc;
@using PagedList;
@using System.Web.Mvc
@model IPagedList<OWP.Models.Book>

<h2>Lista knjiga</h2>

<p>
    @Html.ActionLink("Dodajte novu knjigu", "Create")
</p>

@using (Html.BeginForm("Index", "Books", FormMethod.Get))
            {
                <input type="text" name="search" placeholder="Search by title" class="form-control"/>
                <button type="submit" class="btn btn-primary">Search</button>
            }
<table class="table">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Autor</th>
            <th>Godina</th>
            <th>Cena</th>
            <th>Dostupno</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
            {
        <tr>
            <td>@item.Name</td>
            <td>@item.Author</td>
            <td>@item.ReleaseDate</td>
            <td>@item.Price</td>
            <td>@item.NumberInStock</td>
            <td>
                @Html.ActionLink("Detalji", "Details", new { id = item.Id }) |
                @Html.ActionLink("Izmeni", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Obrisi", "Delete", new { id = item.Id })

                @using (Html.BeginForm("Add", "Cart", FormMethod.Post, new {style = "display:inline" }))
                {
                    @Html.Hidden("bookId", item.Id)
                    <button type="submit" class="btn btn-sm btn-success" title="Dodaj u korpu">
                        <i class="fa fa-cart-plus"></i>
                    </button>

                }
            </td>
        </tr>
            }
        
    </tbody>
</table>

<div class="text-center">
    @Html.PagedListPager(
       Model,
       page => Url.Action("Index", new { page = page, search = Request.QueryString["search"] })

   )
</div>

